@{

}
@model Persona

@using (Html.BeginForm("Saludo", "Persona", FormMethod.Post))
{
    <div>
        @Html.LabelFor(model => model.Nombre)
        @Html.TextBoxFor(model => model.Nombre)
    </div>

    <div>
        <input type="submit" value="Saludar" />
    </div>
}

@if (Model != null && !string.IsNullOrEmpty(Model.Nombre))
{
    <div>
        ¡Hola, @Model.Nombre!
    </div>
}
